<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="create message" author="tribersoft">
    	<createTable tableName="message" >
    		<column name="id" type="varchar(256)">
    			<constraints primaryKey="true" nullable="false"/>
    		</column>
    		<column name="version" type="BIGINT">
    			<constraints nullable="false"/>
    		</column>
    		<column name="owner_username" type="varchar(256)">
    			<constraints nullable="false"/>
    		</column>
    		<column name="content" type="varchar(4096)">
    			<constraints  nullable="false"/>
    		</column>
    		<column name="public_accessible" type="BOOLEAN">
    			<constraints  nullable="false" />
    		</column>
    		<column name="creation_date" type="datetime">
    			<constraints  nullable="false" />
    		</column>
    	</createTable>
    	<createTable tableName="message_entity_accessible_by">
    		<column name="message_entity_id" type="varchar(256)"></column>
    		<column name="accessible_by" type="varchar(256)"></column>
    	</createTable>
    	<addForeignKeyConstraint constraintName="message_entity_accessible_by" referencedTableName="message" baseColumnNames="message_entity_id" baseTableName="message_entity_accessible_by" referencedColumnNames="id"/>
    </changeSet>
    
</databaseChangeLog>