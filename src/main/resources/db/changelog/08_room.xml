<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="create room" author="tribersoft">
    	<createTable tableName="room">
    		<column name="id" type="varchar(256)">
    			<constraints primaryKey="true" nullable="false"/>
    		</column>
    		<column name="version" type="BIGINT">
    			<constraints nullable="false"/>
    		</column>
    		<column name="name" type="varchar(256)">
    			<constraints nullable="false"/>
    		</column>
    		<column name="owner" type="varchar(256)">
    			<constraints nullable="false"/>
    		</column>
    		<column name="current_state" type="varchar(256)">
    			<constraints nullable="false"/>
    		</column>
    	</createTable>
    	<createTable tableName="room_participants">
    		<column name="room_id" type="varchar(256)"></column>
    		<column name="participant" type="varchar(256)"></column>
    	</createTable>
    </changeSet>
    <changeSet id="room pks" author="tribersoft">
    	<addForeignKeyConstraint constraintName="room_participants_room_pk" referencedTableName="room" baseColumnNames="room_id" baseTableName="room_participants" referencedColumnNames="id"/>
    </changeSet>
    
</databaseChangeLog>